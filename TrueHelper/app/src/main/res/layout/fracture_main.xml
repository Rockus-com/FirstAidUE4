<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/fracture_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Перелом"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fracture_text_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Определите вид перелома у пострадавшего, после чего нажмите на соовтетствующую кнопку и следуйте дальнейшим указаниям."
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/fracture_tips"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="fractureTips"
                    android:text="Виды переломов"
                    app:cornerRadius="20dp"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Если есть возможность вызвать скорую помощь, то сделайте это. После чего обеспечьте неподвижность поврежденной конечности, например, положите ее на подушку и обеспечьте покой. На предполагаемую зону перелома положите что-нибудь холодное. Самому пострадавшему можно дать выпить горячий чай или обезболивающее средство."
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/fracture_open"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="fractureOpen"
                    android:text="Открытый перелом"
                    app:cornerRadius="20dp"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />

                <Button
                    android:id="@+id/fracture_closed"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="fractureClosed"
                    android:text="Закрытый перелом"
                    app:cornerRadius="20dp"
                    tools:ignore="HardcodedText,UsingOnClickInXml" />

                <Button
                    android:id="@+id/fracture_leave_main_menu"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="buttonLeave"
                    android:text="Назад"
                    app:cornerRadius="20dp"
                    tools:ignore="UsingOnClickInXml,HardcodedText" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>